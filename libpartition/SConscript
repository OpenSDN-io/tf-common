import os

Import('BuildEnv')
PartEnv = BuildEnv.Clone()

sdist_gen = PartEnv.Command(
    '/pip/libpartition-0.1.dev0-py3-none-any.whl', 'setup.py',
    'cd ' + Dir('#src/contrail-common/libpartition').path + ' && ' + 'python3 setup.py bdist_wheel --dist-dir /pip')
PartEnv.Alias('install', sdist_gen)
